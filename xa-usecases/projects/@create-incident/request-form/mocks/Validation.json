{
  "requestForm": [
    {
      "varName": "Customer",
      "required": true,
      "type": "list",
      "possibleValuesUrl": "api/validation/createsr/customer"
    },
    {
      "varName": "Title",
      "required": true,
      "type": "text"
    },
    {
      "varName": "AssignmentGroup",
      "required": true,
      "type": "text"
    },
    {
      "varName": "ServiceRequestDescriptionTextArea",
      "required": true,
      "type": "text"
    },
    {
      "varName": "Category1",
      "required": true,
      "type": "text",
      "possibleValuesUrl": "api/sm9/category"
    },
    {
      "varName": "Category2",
      "required": true,
      "type": "text",
      "possibleValuesUrl": "api/sm9/category/category"
    },
    {
      "varName": "MailAddressesShareInformation",
      "type": "text",
      "required": false,
      "format": {
        "regexPattern": "^(([a-zA-Z0-9_\\-\\.]+)@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.)|(([a-zA-Z0-9\\-]+\\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\\]?)(\\s*;\\s*|\\s*$))*$",
        "errorMessage": "Please provide correctly formatted email addresses (semicolon [;] separated). "
      }
    }
  ]
}
